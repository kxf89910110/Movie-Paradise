extends ../layout
block content
	.container
		.row
			each cat in categories
				.col-md-4
					.panel.panel-default
						.panel-heading.clearfix(style="position:relative")
							h3 #{cat.name}
							if cat.movies && cat.movies.length >= 4
								a(href="/movie/category/result?cat=#{cat._id}&pageSize=1",style="position: absolute;right: 15px;top:35px;font-size:14px;") MORE >>
						.panel-body
							if cat.movies && cat.movies.length > 0
								.row
									each item in cat.movies
										.col-md-12
											a(href="/movie/"+item._id)
												img(src=item.poster,alt="#{item.title}",style="height:350px;")
											.caption
												h5=item.title
												a.btn.btn-primary(href="movie/#{item._id}",role="button") Details