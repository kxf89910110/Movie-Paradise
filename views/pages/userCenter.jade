extends ../layout
block content
	.container
		.row
			.col-md-12
				form.form-horizontal(method="post",action="/admin/user/info",enctype="multipart/form-data")
					input(type="hidden",name="user[_id]",value="#{user._id}")
					.form-group
						label.col-sm-2.control-label(for="inputUserName") User Name
						.col-sm-10
							input#inputUserName.form-control(type="text",name="user[name]",value=user.name,disabled="disabled")
					.form-group
						label.col-sm-2.control-label(for="inputSex") Sex
						.col-sm-10
							label.radio-inline
								input(type="radio", name="user[sex]",value="Male",checked=user.sex=="Male")
								span Male
							label.radio-inline
								input(type="radio", name="user[sex]",value="Female",checked=user.sex=="Female")
								span Female
					.form-group
						label.col-sm-2.control-label(for="inputEmail") Email
						.col-sm-10
							input#inputEmail.form-control(type="text",name="user[email]",value=user.email)
					.form-group
						label.col-sm-2.control-label(for="inputTel") Phone
						.col-sm-10
							input#inputTel.form-control(type="text",name="user[tel]",value=user.tel)
					.form-group
						label.col-sm-2.control-label(for="inputHeadPic") Avatar
						.col-sm-10
							if !user.img
								img(src="/images/headpic.png",style="width:80px;height:80px;border-radius:50%")
							else
								img(src="/uploads/#{user.img}",style="width:80px;height:80px;border-radius:50%")
					.form-group
						label.col-sm-2.control-label(for="uploadPic")
						.col-sm-10
							button.btn.btn-default(style="position:relative") Upload Avatar
								input#uploadPic(type="file",name="uploadPic",style="position: absolute;left: 0;top: 0;z-index: 1;width: 100%;opacity: 0;cursor: pointer;height:100%")
					.form-group
						.col-sm-offset-2.col-sm-10
							button.btn.btn-primary(type="submit") Add